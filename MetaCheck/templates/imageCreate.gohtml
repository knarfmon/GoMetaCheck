<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Page</title>
    <style>
        html, body, p {
            padding: 0;
            border: 0;
            margin: 0;

        }
        body, form {
            display: flex;
            flex-flow: column nowrap;
            justify-content: flex-start;
            align-items: left;
            /*height: 100vh;*/
            /*padding-left: 40px;*/
            margin-left: 4rem;

        }
        p {
            margin-left: 4rem;
            font-size: 1rem;
            color: black;
        }

        h2,h3 {
            margin-left: 4rem;
        }
        hr{
            width: 86vw;
            margin-left: 4rem;
            size: 1px;

        }
        input {

            width: 60vw;
            font-size: 1rem;
            color: blue;
            border: 1px solid black;
        }
        .buttonarea{
            display: flex;
            width: 15vw;
            justify-content: space-between;
            border-bottom: 5rem;
        }

        .button{

            display: flex;
            justify-content: center;
            align-items: center;

            color: white;
            background-color: gray;
            font-size: 1.5vw;
            padding: 10px 30px;
            margin-right: 15px;
            width: 8vw;


            cursor: pointer;
            border-radius: 8px;
        }
        .button:hover {
            color: #000;
            background-color: lightgrey;
        }

    </style>
</head>
<body>
{{template "header"}}<br><br><br><br>


<h2>Image Detail Create</h2>

<p>Customer: {{.CustomerName}}</p>
<p>Site: {{.SiteName}}</p>
<p>Page: {{.PageName}}</p>

<br>


<form method="post" action="/image/create/process">
    <label for="name">Name</label>
    <input type="text" name="name" placeholder="Name" required autofocus>
    <br>

    <label for="altText">Alt Text</label>
    <input type="text" name="altText" placeholder="Alt Text" >
    <br>

    <label for="imageUrl">Image Url</label>
    <input type="text" name="imageUrl" placeholder="Image Url" required >
    <br>






{{/*<input type="hidden" name="customer_id" value="{{.CustomerId}}">*/}}

    <div class = "buttonarea"><input class="button" type="submit">
    {{/*<a href="/customers" class="button">Cancel</a>*/}}
        <a href="#" class="button" onclick="history.back();">Cancel</a>
    </div>


</form>
<br><br><br>
</body>

</html>