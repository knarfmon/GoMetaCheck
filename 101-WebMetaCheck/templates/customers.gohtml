<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Customer</title>
    <style>
        html, body, p {
            padding: 0;
            border: 0;
            margin: 0;
        }
        body {
            display: flex;
            flex-flow: column nowrap;
            justify-content: flex-start;
            align-items: left;
            height: 100vh;
            padding-left: 40px;
        }
        p {
            margin-left: 4rem;
            font-size: 1rem;
            color: black;
        }

        h2,h3 {
            margin-left: 4rem;
        }
        hr{
            width: 86vw;
            margin-left: 4rem;
            size: 1px;

        }
        .createlink {
            font-size: 1rem;
            color: dodgerblue;
            margin-left: 4rem;
        }
        .link {
            font-size: 1rem;
            color: dodgerblue;
            margin-left: 65vw;
        }
    </style>
</head>
<body>


{{template "header"}}<br><br><br><br>


<h2>Customers</h2>
<p class="createlink"><a href="/customer/create">Create New</a></p>

<br>

 <h3>Name</h3>
{{range .}}

    <p>{{.Name}}<span class="link"><a href="/customer/site">Site(s)</a> |
        <a href="/customer/edit">Edit</a> |
        <a href="/customer/import">Import</a> |
        <a href="/customer/archive">Archive</a></span></p>

    <hr>
{{ end }}




</body>
</html>



