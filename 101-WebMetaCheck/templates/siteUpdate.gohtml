<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Customer</title>
    <style>
        html, body, p {
            padding: 0;
            border: 0;
            margin: 0;
        }
        body, form {
            display: flex;
            flex-flow: column nowrap;
            justify-content: flex-start;
            align-items: left;
            height: 100vh;
            /*padding-left: 40px;*/
            margin-left: 4rem;
        }
        p {
            margin-left: 4rem;
            font-size: 1rem;
            color: black;
        }

        h2,h3 {
            margin-left: 4rem;
        }
        hr{
            width: 86vw;
            margin-left: 4rem;
            size: 1px;

        }
        input {

            width: 60vw;
            font-size: 1rem;
            color: blue;
            border: 1px solid black;
        }

        .buttonarea{
            display: flex;
            width: 15vw;
            justify-content: space-between;
        }
        .button{

            display: flex;
            justify-content: center;
            align-items: center;

            color: white;
            background-color: gray;
            font-size: 1.5vw;
            padding: 10px 30px;
            margin-right: 15px;
            width: 8vw;


            cursor: pointer;
            border-radius: 8px;
        }
        .button:hover {
            color: #000;
            background-color: lightgrey;
        }

    </style>
</head>
<body>
{{template "header"}}<br><br><br><br>


<h2>Site</h2>

<p> Update</p>

<br>

<h3>Name</h3>

<form method="post" action="/site/update/process">
    <label for="name">Site Name:</label>
    <input type="text" name="name" placeholder="Site's Name" required autofocus value="{{.Name}}">
    <br>
    <label for="url">Url:</label>
    <input type="text" name="url" placeholder="Site's Url" required value="{{.Url}}">
    <input type="hidden" name="site_id" value="{{.Id}}">
    <input type="hidden" name="customer_id" value="{{.CustomerId}}">
    <br>
    <div class = "buttonarea"><input class="button" type="submit">
    {{/*<a href="/customers" class="button">Cancel</a>*/}}
        <a href="#" class="button" onclick="history.back();">Cancel</a>
    </div>


</form>


</body>
</html>