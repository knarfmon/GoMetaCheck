<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Customer</title>
    <style>
        html, body, p {
            padding: 0;
            border: 0;
            margin: 0;
        }
        body, form {
            display: flex;
            flex-flow: column nowrap;
            justify-content: flex-start;
            align-items: left;
            height: 100vh;
            /*padding-left: 40px;*/
            margin-left: 4rem;
        }
        p {
            margin-left: 4rem;
            font-size: 1rem;
            color: black;
        }

        h2,h3 ,h4,form {
            margin-left: 4rem;
        }
        hr{
            width: 86vw;
            margin-left: 4rem;
            size: 1px;

        }
        input {

            width: 30vw;
            font-size: 1rem;
            color: blue;
            border: 1px solid black;
            margin-left: 4rem;
        }
        .buttonarea{
            display: flex;
            width: 15vw;
            justify-content: space-between;
        }

        .button{

            display: flex;
            justify-content: center;
            align-items: center;

            color: white;
            background-color: gray;
            font-size: 1.5vw;
            padding: 10px 30px;
            margin-right: 15px;
            width: 8vw;


            cursor: pointer;
            border-radius: 8px;
        }
        .button:hover {
            color: #000;
            background-color: lightgrey;
        }
        .spanGreen{
            color: green;
        }
        .form-field-err {
            color: red;
            width: 25rem;
            text-align: left;
        }


    </style>
</head>
<body>
{{template "header"}}<br><br><br><br>


<h2>Compare For {{.Name}}</h2>
<h3>Standard Site Url: {{.Url}}</h3>
{{/*<p> Create Pages</p>*/}}



{{/*<h3>Files</h3>*/}}





<form method="post" enctype="multipart/form-data" action="/site/compare/process" id="form-create-user">
    <div>
        <h3><b> Compare Site With Pages From Frog Upload</b></h3>
        <h4>1. Run Frog with chosen website.</h4>
        <h4>2. Export both CSV files to desired folder.</h4>

        <span>
            <h4>3. Select "<span class="spanGreen">internal_html.csv</span>" file</h4>
        {{/*<h4><label for="html">Select internal_html.csv file</label></h4>*/}}
        <input type="file" id="html" name="html"
               accept=".csv" required>
        </span>

        <p class="form-field-err" id="htmlErr"></p>

        <h4>4. Select "<span class="spanGreen">all_images.csv</span>" file</h4>
        {{/*<label for="image">Select all_images.csv file</label>*/}}
        <input type="file" id="image" name="image"
               accept=".csv" required>

        <p class="form-field-err" id="imageErr"></p>

        <input type="hidden" name="site_id" value="{{.Id}}">
        <input type="hidden" name="name" value="{{.Name}}">
    </div>
    <h4>5. Select Compare. Wait approximately 30 seconds for processing.</h4>
    <br />
    <div class = "buttonarea">
        <input class="button" type="submit" value="Compare" id="submitbutton">

        <a href="#" class="button" onclick="history.back();">Cancel</a>
    </div>

</form>

<script>
    var formUser = document.querySelector('#form-create-user');
    var html = document.querySelector('#html');
    var image = document.querySelector('#image');


    var htmlErr = document.querySelector('#htmlErr');
    var imageErr = document.querySelector('#imageErr');



    html.addEventListener('focus', function () {

            htmlErr.textContent = '';
            document.querySelector('#submitbutton').disabled = false;

    });
    image.addEventListener('focus', function () {

        imageErr.textContent = '';
        document.querySelector('#submitbutton').disabled = false;

    });


    //    Validate
    //    listen for submit button click
    formUser.addEventListener('submit', function(e){
        var ok = validatePasswords();

        if (!ok) {
            e.preventDefault();
            return;
        }
    });

    function validatePasswords() {

        if (html.value.indexOf("internal_html.csv") === -1 ) {
            htmlErr.textContent = 'Incorrect html file name from Frog, must be "internal_html.csv"';
            document.querySelector('#submitbutton').disabled = true;
            return false}

        if (image.value.indexOf("all_images.csv") === -1 ) {
            imageErr.textContent = 'Incorrect image file name from Frog, must be "all_images.csv"';
            document.querySelector('#submitbutton').disabled = true;
            return false}

        imageErr.textContent = '';
        htmlErr.textContent = '';
            return true
    };

</script>

</body>
</html>